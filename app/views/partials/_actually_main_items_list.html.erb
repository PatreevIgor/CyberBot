<h1>Actually main Items list (count: <%= Item.where(status: 'main_actually').size %>) </h1>
<table>
  <thead>
    <tr>
      <th>hash_name</th>
      <th>price</th>
      <th>link</th>
      <th>link_destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @actually_main_items.each do |item| %>
      <tr>
        <td><%= item.hash_name %></td>
        <td>&nbsp;<%= item.price %>&nbsp;</td>
        <td><%= link_to 'Link', item.link %>&nbsp;</td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
