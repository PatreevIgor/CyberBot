<h1>New Items (count: <%= @new_items.size %>)</h1>
<table>
  <thead>
    <tr>
      <th>hash_name</th>
      <th>price</th>
      <th>link</th>
      <th>Destroy link</th>
    </tr>
  </thead>

  <tbody>
    <% @new_items.each do |item| %>
      <tr>
        <td><%= item.hash_name %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Link', item.link %>&nbsp;</td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
